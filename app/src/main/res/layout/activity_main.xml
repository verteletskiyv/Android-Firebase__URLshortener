<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    android:background="@color/bg"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/montserrat_alternates_bold"
        android:text="@string/title"
        android:textColor="@color/white"
        android:textSize="36sp"
        android:textAlignment="center"
        android:paddingHorizontal="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/longUrlField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="139dp"
        android:ems="10"
        android:fontFamily="@font/montserrat_alternates"
        android:autofillHints="@string/long_url"
        android:hint="@string/long_url"
        android:inputType="textUri"
        android:minHeight="48dp"
        android:backgroundTint="@color/hints"
        android:text=""
        android:textColor="@color/white"
        android:textColorHint="@color/hints" />

    <EditText
        android:id="@+id/shortUrlField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="190dp"
        android:ems="10"
        android:fontFamily="@font/montserrat_alternates"
        android:autofillHints="@string/short_url"
        android:hint="@string/short_url"
        android:inputType="text"
        android:minHeight="48dp"
        android:backgroundTint="@color/hints"
        android:text=""
        android:textColor="@color/white"
        android:textColorHint="@color/hints" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="266dp"
        android:textColor="@color/white"
        android:fontFamily="@font/montserrat_alternates_bold"
        android:layout_marginHorizontal="60dp"
        android:background="@color/btn"
        android:text="@string/btn_init" />

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/button"
        android:layout_marginHorizontal="40dp"
        android:layout_marginVertical="10dp"
        android:divider="@android:color/transparent"
        android:dividerHeight="1dp" />

</RelativeLayout>